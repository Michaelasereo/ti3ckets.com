{
  "name": "getiickets",
  "version": "1.0.0",
  "private": true,
  "description": "Ticketing Platform for Africa",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "preinstall": "node -e \"if(process.env.NODE_ENV==='production'){console.warn('\\x1b[33mâš  Warning: NODE_ENV=production detected. DevDependencies may be skipped. Run: NODE_ENV=development npm install\\x1b[0m')}\"",
    "dev": "cross-env NODE_ENV=development turbo run dev --filter=@getiickets/web",
    "dev:web": "npm run dev --workspace=@getiickets/web",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "build:web": "turbo run build --filter=@getiickets/web",
    "deploy:prod": "npm run build:web && npx netlify deploy --prod"
  },
  "devDependencies": {
    "eslint-config-prettier": "^9.1.0",
    "@types/node": "^20.19.30",
    "@types/react": "^19.2.10",
    "cross-env": "^10.1.0",
    "prettier": "^3.1.0",
    "turbo": "^1.13.4",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
